<%= form_for(@post, html: { multipart: true, id: "new-post" }) do |f| %>
	<div class="group-half">
		<%= f.text_area :body, class: "form-control" %>
	</div>
	<div class="group-half"><div class="pic">
		<%= f.label :picture do %>
			<span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
			Attach a Photo
		<% end %>
		<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
	</div></div>
	<div class="form-group submit">
		<%= f.submit class: "btn btn-default" %>
	</div>
<% end %>
<br>

<script type="text/javascript">
  $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 0.5) {
      alert('Maximum file size is 500KB. Please choose a smaller file.');
    }
  });
</script>
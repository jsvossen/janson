<% @user ||= current_user %>

<section class="user_info">
      <h1>
      	<%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p class="email"><%= @user.email %></p>
	  <% if @user.location && !@user.location.empty? %>
	  	<p class="location info">From <%= @user.location %></p>
	  <% end %>
	  <% if @user.birthday %>
	  	<p class="age info"><%= @user.age %> years old</p>
	  </small><% end %>
</section>
<% if @user.about && !@user.about.empty? %>
<section class="about">
	<p><em><%= @user.about %></em></p>
</section>
<% end %>
<section class="friends">
	<% if @user.friends.accepted.any? %>
		<p><%= link_to pluralize(@user.friends.accepted.count, "Friend"), user_friends_path(@user) %></p>
		<div class="user_avatars">
			<% @user.friends.accepted.each do |user| %>
				<%= link_to user, title: user.name do %>
					<%= gravatar_for user, size: 30 %>
				<% end %>
			<% end %>
		</div>
	<% end %>
</section>

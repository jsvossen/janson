<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      JAnSoN <em>Just Another Social Network</em>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to "News Feed", root_path %>
        <li><%= link_to "Users", users_path %>
        <li><%= link_to "My Posts", current_user %>
        <li><%= link_to "My Friends", user_friends_path(current_user) %>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit Profile", edit_profile_path %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: "delete" %></li>
            </ul>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Connect via Facebook", user_omniauth_authorize_path(:facebook) %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>